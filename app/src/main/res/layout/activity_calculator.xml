<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalculatorActivity" android:background="#000000">

    <EditText
            android:layout_width="318dp"
            android:layout_height="70dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/calcResults"
            android:text="3.142" android:textAlignment="viewEnd"
            android:textSize="34sp" android:editable="false" android:layout_marginTop="65dp"
            android:layout_marginBottom="20dp" app:layout_constraintEnd_toEndOf="@+id/tableLayout2"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:textColor="#FFFFFF"/>
    <TableLayout
            android:layout_width="324dp"
            android:layout_height="432dp"
            android:id="@+id/tableLayout2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="9dp"
            app:layout_constraintTop_toBottomOf="@+id/calcResults" android:layout_marginBottom="154dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button1"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button2"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button3"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button4" android:maxWidth="50dip"
                    android:background="#FF9800"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button5"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button6"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button7"/>
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button8" android:background="#FF9800"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button9"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button10"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button11"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button12" android:background="#FF9800"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button13"/>
            <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button14"/>
            <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button15" android:background="#4CAF50"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button16" android:background="#FF9800"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>