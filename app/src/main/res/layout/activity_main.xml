<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/main_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textMainActivityTitle"
            android:textSize="34sp" android:layout_marginTop="43dp"
            android:layout_marginBottom="192dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageMainActivityFM" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/main_activity_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textMainActivitySubtitle"
            app:layout_constraintTop_toBottomOf="@+id/textMainActivityTitle"
            android:layout_marginEnd="36dp" android:layout_marginBottom="141dp"
            app:layout_constraintEnd_toEndOf="@+id/textMainActivityTitle"
            app:layout_constraintBottom_toTopOf="@+id/imageMainActivityCal"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/imageMainActivityPro"
            app:srcCompat="@drawable/pro"
            android:contentDescription="@string/image_alt"
            app:layout_constraintStart_toEndOf="@+id/imageMainActivityCal"
            app:layout_constraintEnd_toStartOf="@+id/imageMainActivityFM" app:layout_constraintTop_toTopOf="@+id/imageMainActivityFM"
            app:layout_constraintBottom_toBottomOf="@+id/imageMainActivityFM" android:layout_marginEnd="21dp"
    />
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/imageMainActivityFM"
            app:srcCompat="@drawable/fm"
            android:contentDescription="@string/image_alt"
            app:layout_constraintTop_toBottomOf="@+id/textMainActivityTitle"
            app:layout_constraintStart_toEndOf="@+id/imageMainActivityPro" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="356dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="47dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/imageMainActivityCal"
            app:srcCompat="@drawable/cal"
            android:contentDescription="@string/image_alt"
            app:layout_constraintTop_toBottomOf="@+id/textMainActivitySubtitle"
            app:layout_constraintEnd_toStartOf="@+id/imageMainActivityPro" android:layout_marginBottom="356dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>